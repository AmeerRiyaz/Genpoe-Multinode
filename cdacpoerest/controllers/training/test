//ipfs = ipfsAPI({host:'10.244.1.233', port:'5001', protocol: 'http'})
function cts() {
    var current = new Date();
    var curr_ts = current.toString();
    return curr_ts;
}

function getErrorMessage(field) {
    var response = {
        status: "Failed",
        message: field,
        result: ""
    };
    rtelib.raiseEvent('blockchain', 'poeSearch', {
        ts: cts(),
        msg: 'Query failed due to ' + field
    });
    return response;
}
